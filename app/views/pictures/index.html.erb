<div class='main'>
	<% @pictures.each do |picture| %>
		<div class='box panel panel-body'>
			<a href="/pictures/<%= picture.id %>"/>
				<%= image_tag(picture.url,class: 'images') %>
			</a>
			<div class='panel-footer center'>
				<h3><%= picture[:title] %></h3>
				<p>Posted by: <%= User.find(picture.user_id).email %></p>
			</div>
		</div>
	<% end %>
</div>
